@using ToDoList.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>To Do List</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>To Do List</h1>
    </div>
    <ul>
    @if (Model.Count == 0)
    {
      <p>You have no items in your to do list!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Item item in Model)
      {
        <li><a href="/items/@item.GetId()" class="btn btn-dark">@item.GetDescription()</a></li>
      }
    }
    </ul>
    <a href="/items/new" class="btn btn-dark">Add a new item</a>
    <form action="/items/delete" method="post">
      <button type="submit" name="button" class="btn btn-dark">Clear all Items</button>
    </form>
  </div>
</body>
</html>
